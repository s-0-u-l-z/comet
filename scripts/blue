-- Thx to https://github.com/XVCHub for the method and songs >.<

if not isfile("blue.mp3") then
    writefile("blue.mp3", game:HttpGet("https://github.com/s-0-u-l-z/comet/raw/refs/heads/main/sounds/SageStance.mp3"))
end

local blue = Instance.new("Sound", game:GetService("SoundService"))
blue.SoundId = getcustomasset("blue.mp3")
blue.Volume = getgenv().volume or 1
blue.Looped = getgenv().loop == true

blue:Play()
if not blue.Looped then
    blue.Ended:Connect(function()
        blue:Destroy()
    end)
end
