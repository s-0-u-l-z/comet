-- Thx to https://github.com/XVCHub for the method and songs >.<

if not isfile("Stars_StarsSource_okimcool.mp3") then
    writefile("Stars_StarsSource_okimcool.mp3", game:HttpGet("https://github.com/s-0-u-l-z/comet/raw/refs/heads/main/sounds/Stars_StarsSource_okimcool.mp3"))
end

local Stars_StarsSource_okimcool = Instance.new("Sound", game:GetService("SoundService"))
Stars_StarsSource_okimcool.SoundId = getcustomasset("Stars_StarsSource_okimcool.mp3")
Stars_StarsSource_okimcool.Volume = getgenv().volume or 1
Stars_StarsSource_okimcool.Looped = getgenv().loop == true

Stars_StarsSource_okimcool:Play()
if not Stars_StarsSource_okimcool.Looped then
    Stars_StarsSource_okimcool.Ended:Connect(function()
        Stars_StarsSource_okimcool:Destroy()
    end)
end
