-- Thx to https://github.com/XVCHub for the method and songs >.<

if not isfile("phonk1.mp3") then
    writefile("phonk1.mp3", game:HttpGet("https://github.com/s-0-u-l-z/comet/raw/refs/heads/main/sounds/phonk1.mp3"))
end

local phonk1 = Instance.new("Sound", game:GetService("SoundService"))
phonk1.SoundId = getcustomasset("phonk1.mp3")
phonk1.Volume = getgenv().volume or 1
phonk1.Looped = getgenv().loop == true

phonk1:Play()
if not phonk1.Looped then
    phonk1.Ended:Connect(function()
        phonk1:Destroy()
    end)
end
